import java.util.*;
public class HelloWorld{

     public static void main(String []args){
         Scanner sc = new Scanner(System.in);
        System.out.println("Enter number to generate sequence = ");
        int seq = sc.nextInt();
        System.out.println("To find nth element, enter n = ");
        int n = sc.nextInt();
        int result = 0;
        for(int i=0;i<n;i++)
        {
            result = ((int)Math.pow(2,i) )* seq;
        }
        System.out.println(n + "th element is" + result);
     }
}
